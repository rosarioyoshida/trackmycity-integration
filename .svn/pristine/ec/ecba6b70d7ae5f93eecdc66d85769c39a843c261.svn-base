<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>List UserAlerts</title>
</head>
<body>
	<form action="removeUserAlerts" method="post" enctype="application/x-www-form-urlencoded">
			<table border="1" bordercolor="#CCCCCC" cellpadding="5" cellspacing="2">
				<thead>
					<tr>
						<td>#</td>
						<td>Formatted Address</td>
						<td>Alert Type</td>
					</tr>
				</thead>
				<tbody>
					<c:forEach var="alert" items="${alerts}">
					<tr>
						<td><input type="checkbox" value="<c:out value="${alert.id}"/>" name="selectedAlerts" ></td>
						<td><c:out value="${alert.formattedAddress}"/></td>
						<td><c:out value="${alert.alertType.name}"/></td>
					</tr>
					</c:forEach>
				</tbody>
				<tfoot>
					<tr>
						<td colspan="3"><input type="submit" value="Submit"></td>
					</tr>
				</tfoot>
			</table>
	</form>
</body>
</html>