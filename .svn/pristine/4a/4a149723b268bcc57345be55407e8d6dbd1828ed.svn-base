package br.com.trackmycity.models;

import java.io.Serializable;

import javax.persistence.CascadeType;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.ManyToOne;
import javax.persistence.OneToOne;
import javax.persistence.Table;
import javax.xml.bind.annotation.XmlAccessType;
import javax.xml.bind.annotation.XmlAccessorType;
import javax.xml.bind.annotation.XmlRootElement;

@Entity
@Table(name = "USER_ALERT")
@XmlRootElement(name = "user_alert") @XmlAccessorType(XmlAccessType.FIELD)
public class UserAlert extends GenericModel implements Serializable {
	
	private static final long serialVersionUID = 1L;
	
	@Id @GeneratedValue(strategy = GenerationType.AUTO)
	private Long id;
	private String description;
	private String photo;
	private Double lat;
	private Double lon;
	@OneToOne(mappedBy = "alert" , cascade = CascadeType.ALL, fetch = FetchType.LAZY, optional = false)
	private Address address;
	@ManyToOne(cascade = CascadeType.ALL, fetch = FetchType.LAZY)
	private AlertSubType subtype;
	
	public UserAlert() {
		super();
	}

	public UserAlert(String description, String photo, Double lat, Double lon, Address address, AlertSubType subtype) {
		super();
		this.description = description;
		this.photo = photo;
		this.lat = lat;
		this.lon = lon;
		this.address = address;
		this.address.setAlert(this);
		this.subtype = subtype;
	}

	public Long getId() {
		return id;
	}

	public String getDescription() {
		return description;
	}

	public void setDescription(String description) {
		this.description = description;
	}

	public String getPhoto() {
		return photo;
	}

	public void setPhoto(String photo) {
		this.photo = photo;
	}

	public Double getLat() {
		return lat;
	}

	public void setLat(Double lat) {
		this.lat = lat;
	}

	public Double getLon() {
		return lon;
	}

	public void setLon(Double lon) {
		this.lon = lon;
	}

	public Address getAddress() {
		return address;
	}

	public void setAddress(Address address) {
		this.address = address;
	}

	public AlertSubType getSubtype() {
		return subtype;
	}

	public void setSubtype(AlertSubType subtype) {
		this.subtype = subtype;
	}

}
